<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgHinh"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_important_devices_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMaTBi"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="CS" />

        <TextView
            android:id="@+id/txtTenTbi"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Chiếu sáng" />
        <TextView
            android:id="@+id/txtXuatXu"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Nhật Bản" />
        <TextView
            android:id="@+id/txtMaLoai"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="CS" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgDetail"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_format_list_bulleted_24" />

</LinearLayout>